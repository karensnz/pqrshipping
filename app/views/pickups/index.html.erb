<div class="page-header">
  <h1>
    Pickups
    <a href="/pickups/new" class="btn btn-lg btn-success">New Pickup</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "pickups_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :special_instructions_cont, "Special instructions contains" %>
    <%= f.text_field :special_instructions_cont, :class => "form-control", :placeholder => "Special instructions contains" %>
  </div>

<div class="form-group">
    <%= f.label :package_destination_cont, "Package destination contains" %>
    <%= f.text_field :package_destination_cont, :class => "form-control", :placeholder => "Package destination contains" %>
  </div>

<div class="form-group">
    <%= f.label :materials_needed_cont, "Materials needed contains" %>
    <%= f.text_field :materials_needed_cont, :class => "form-control", :placeholder => "Materials needed contains" %>
  </div>

<div class="form-group">
    <%= f.label :package_type_cont, "Package type contains" %>
    <%= f.text_field :package_type_cont, :class => "form-control", :placeholder => "Package type contains" %>
  </div>

<div class="form-group">
        <%= f.label :time, "Time" %>
        <div class="row">
          <div class='col-md-6 mb-1'>
            <div class='input-group date' id='timegteqPicker'>
              <%= f.text_field :time_gteq, :class => "form-control", :placeholder => "Time greater than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timegteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='input-group date' id='timelteqPicker'>
              <%= f.text_field :time_lteq, :class => "form-control", :placeholder => "Time less than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timelteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
        </div>
      </div>

<div class="form-group">
          <%= f.label :day, "Day" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='daygteqPicker'>
                  <%= f.text_field :day_gteq, :class => "form-control", :placeholder => "Day greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='daylteqPicker'>
                  <%= f.text_field :day_lteq, :class => "form-control", :placeholder => "Day less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#daygteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#daylteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#daygteqPicker').on("dp.change", function (e) {
                  $('#daylteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#daylteqPicker').on("dp.change", function (e) {
                  $('#daygteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usergteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userlteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/pickups" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#pickups_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Day</th>
        <th>Time</th>
        <th>Package type</th>
        <th>Materials needed</th>
        <th>Package destination</th>
        <th>Image upload</th>
        <th>Special instructions</th>
        <th>Actions</th>
      </tr>

      <% @pickups.each do |pickup| %>
      <tr>
        <td>
          <% if pickup.user.present? %>
            <a href="/users/<%= pickup.user.id %>">
              <%= pickup.user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= pickup.day %></td>
        <td><%= pickup.time %></td>
        <td><%= pickup.package_type %></td>
        <td><%= pickup.materials_needed %></td>
        <td><%= pickup.package_destination %></td>
        <td><img src='<%= pickup.image_upload %>' class='img-responsive'></td>
        <td><%= pickup.special_instructions %></td>
        <td>
          <a href="/pickups/<%= pickup.id %>" class="btn btn-primary">Show</a>
          <a href="/pickups/<%= pickup.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pickup/<%= pickup.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pickups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
